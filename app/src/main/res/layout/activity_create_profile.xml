<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.internship.ahmedaj.tinderstage.View.UI.Activity.Activitys.CreateProfile">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        app:srcCompat="@drawable/pjobs" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_Candidate"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:text="Select your account type plz "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bt_Candidate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/buttoncandcreate"
        android:text="Candidate"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:id="@+id/bt_Recruteur"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bt_Candidate"
        android:layout_marginStart="9dp"
        android:background="@drawable/buttoncreate"
        android:text="Recruter"
        android:textColor="@color/cardview_light_background" />
</RelativeLayout>
