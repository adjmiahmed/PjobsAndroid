<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/ln_background"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/backcolor"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:visibility="visible"
                    app:srcCompat="@color/colorbackground" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"

                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:layout_weight="0"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/photoprofile"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/tx_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/tx_UserName"
                    android:layout_centerHorizontal="true"

                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:text="Mobile developper"
                    android:textColor="@color/colorAccent"

                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tx_UserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_image"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="0"
                    android:text="Ahmed Ajmi"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardeducationinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardinfo"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignStart="@+id/textView13"
                        android:layout_below="@+id/info"
                        android:layout_marginBottom="17dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="17dp">

                        <ImageView
                            android:id="@+id/educationlogo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:paddingTop="2.5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/education" />

                        <TextView
                            android:id="@+id/tx_educationinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toEndOf="@+id/educationlogo"
                            android:text="EDUCATION"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:id="@+id/Re_educationinfo1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/tx_educationinfo"
                            android:layout_below="@+id/tx_educationinfo">

                            <TextView
                                android:id="@+id/tx_edInfdate1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_weight="1"
                                android:paddingTop="2.5dp"
                                android:text="2017-2018"
                                android:textSize="10sp" />


                        </RelativeLayout>

                        <TextView
                            android:id="@+id/edinfval"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/Re_educationinfo1"
                            android:layout_alignBottom="@+id/Re_educationinfo1"
                            android:layout_toEndOf="@+id/tx_educationinfo"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:paddingTop="2.5dp"
                            android:text="IssatSousse"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardexpinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardeducationinfo"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignStart="@+id/textView13"
                        android:layout_below="@+id/info"
                        android:layout_marginBottom="17dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="17dp">

                        <ImageView
                            android:id="@+id/expinfologo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:paddingTop="2.5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/experience" />

                        <TextView
                            android:id="@+id/tx_expinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toEndOf="@+id/expinfologo"
                            android:text="EXPERIENCE"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:id="@+id/Re_expinfo1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/tx_expinfo"
                            android:layout_below="@+id/tx_expinfo">

                            <TextView
                                android:id="@+id/tx_edInfexpdate1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_weight="1"
                                android:paddingTop="2.5dp"
                                android:text="2017-2018"
                                android:textSize="10sp" />


                        </RelativeLayout>

                        <TextView
                            android:id="@+id/edinfexpval"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/Re_expinfo1"
                            android:layout_alignBottom="@+id/Re_expinfo1"
                            android:layout_toEndOf="@+id/tx_expinfo"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:paddingTop="2.5dp"
                            android:text="IssatSousse"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardstrengthinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardexpinfo"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:paddingEnd="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignStart="@+id/textView13"
                        android:layout_below="@+id/info"
                        android:layout_marginBottom="17dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="17dp">

                        <ImageView
                            android:id="@+id/strengthlogo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:paddingTop="2.5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/strength" />

                        <TextView
                            android:id="@+id/tx_strenthninfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toEndOf="@+id/strengthlogo"
                            android:text="STRENGTHS"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/tx_strenthninfo"
                            android:layout_below="@+id/tx_strenthninfo"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tx_skills"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tx_course"
                                android:layout_marginTop="10dp"
                                android:text="Skills" />

                            <TextView
                                android:id="@+id/tx_Language"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/tx_LanguageVal"
                                android:layout_alignBottom="@+id/tx_LanguageVal"
                                android:layout_alignParentStart="true"
                                android:text="Language" />

                            <TextView
                                android:id="@+id/tx_SkillsVal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/tx_skills"
                                android:layout_alignBottom="@+id/tx_skills"
                                android:layout_marginStart="30dp"
                                android:layout_toEndOf="@+id/tx_Language"
                                android:text="Scrum, GIT, Android, JAVA"
                                android:textColor="@android:color/holo_green_light" />

                            <TextView
                                android:id="@+id/tx_LanguageVal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/tx_SkillsVal"
                                android:layout_below="@+id/tx_SkillsVal"
                                android:layout_marginTop="20dp"
                                android:text="English, Frensh"
                                android:textColor="@android:color/holo_green_light" />

                        </RelativeLayout>


                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>