<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/ln_background"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:background="@drawable/backkground"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0">


                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"

                        android:layout_alignParentStart="true"
                        app:srcCompat="@color/colorbackground" />

                    <TextView
                        android:id="@+id/tx_NameEntp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="Proxym-IT"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tx_jobtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/tx_NameEntp"

                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="Mobile developper"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tx_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/img_money"
                        android:layout_below="@+id/img_money"
                        android:layout_weight="1"
                        android:text="  2000"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tx_adress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_location"
                        android:layout_marginRight="55dp"
                        android:layout_toLeftOf="@id/img_time"
                        android:layout_weight="1"
                        android:text="Sousse"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tx_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_time"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:text="Full-Time" />

                    <ImageView
                        android:id="@+id/img_location"
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:layout_marginRight="50dp"
                        android:layout_toLeftOf="@id/img_time"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/location" />

                    <ImageView
                        android:id="@+id/img_time"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/time" />

                    <ImageView
                        android:id="@+id/img_money"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_toRightOf="@id/img_time"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/money" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0.5"

                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"

                        android:background="@color/colorpanel"
                        android:paddingLeft="20dp"
                        android:text="JOB DESCRIPTION"
                        android:textSize="18sp"
                        android:textStyle="bold" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"><LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tx_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="8"

                            android:text="Support in specification architecture and project development within the company platform. Strategic planning to ensure the quality of projects. Helps identify defects and support internal and external requirements for problem resolution. Communications with customers. " />
</LinearLayout></ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="-20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"

                        android:background="@color/colorpanel"
                        android:paddingLeft="20dp"
                        android:text="REQUIREMENT"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tx_course"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Course" />

                        <TextView
                            android:id="@+id/tx_skills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tx_course"
                            android:layout_marginTop="10dp"
                            android:text="Skills" />

                        <TextView
                            android:id="@+id/tx_levelOfStudy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tx_skills"
                            android:layout_marginTop="10dp"
                            android:text="Level Of Study" />

                        <TextView
                            android:id="@+id/tx_Language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tx_levelOfStudy"
                            android:layout_marginTop="10dp"
                            android:text="Language" />

                        <TextView
                            android:id="@+id/tx_courseVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@id/tx_levelOfStudy"
                            android:text="Comptuer engineering"
                            android:textColor="@android:color/holo_green_light" />

                        <TextView
                            android:id="@+id/tx_SkillsVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tx_course"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@id/tx_levelOfStudy"
                            android:text="Scrum, GIT, Android, JAVA"
                            android:textColor="@android:color/holo_green_light" />

                        <TextView
                            android:id="@+id/tx_levelOfStudyVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tx_skills"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@id/tx_levelOfStudy"
                            android:text="Engineering, Master"
                            android:textColor="@android:color/holo_green_light" />

                        <TextView
                            android:id="@+id/tx_LanguageVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tx_levelOfStudy"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@id/tx_levelOfStudy"
                            android:text="English, Frensh"
                            android:textColor="@android:color/holo_green_light" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>